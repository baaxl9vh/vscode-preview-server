{
	"name": "preview-server",
	"displayName": "Preview Server",
	"description": "Preview Server",
	"publisher": "jjjjkkkk",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.62.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/baaxl9vh/vscode-preview-server.git"
	},
	"bugs": "https://github.com/baaxl9vh/vscode-preview-server/issues",
	"homepage": "https://github.com/baaxl9vh/vscode-preview-server/blob/main/README.md",
  "keywords": [
    "web server",
    "preview server",
    "http server",
    "html preview"
  ],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:preview-server.startGBK",
		"onCommand:preview-server.startServer",
		"onCommand:preview-server.stopServer",
		"onCommand:preview-server.open"
	],
	"main": "./main.js",
	"contributes": {
		"commands": [
			{
				"command": "preview-server.startGBK",
				"title": "Preview Server: Start Server with GBK charset"
			},
			{
				"command": "preview-server.startServer",
				"title": "Preview Server: Start Server"
			},
			{
				"command": "preview-server.stopServer",
				"title": "Preview Server: Stop Server"
			},
			{
				"command": "preview-server.open",
				"title": "Preview Server: Open In Browser"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild extension.js --bundle --outfile=main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"configuration": {
		"type": "object",
		"title": "Preview Server Configuration",
		"properties": {
			"preview-server.port": {
				"type": "number",
				"default": 8900,
				"description": "Preview server port"
			},
			"preview-server.charset": {
				"type": "string",
				"default": "UTF-8",
				"description": "Static files charset"
			}
		}
	},
	"dependencies": {
		"express": "~4.16.1",
		"open": "^8.4.0"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@vscode/test-electron": "^1.6.2",
		"esbuild": "^0.13.15",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4"
	}
}
